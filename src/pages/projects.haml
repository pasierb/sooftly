- content_hash[:title] = '- Projects'

.left-column
	%h1 web apps

.right-column
	.section.project
		%p 
			%span.project-title 
				%a{ :href => 'http://holidayplannerapp.com' } Holiday planner
			%span
				%a.box{ :href => 'http://holidayplannerapp.com', :target => 'blank' } view site
				%a.box{ :href => 'https://github.com/pasierb/holiday-planner', :target => 'blank' } source code
		.project-image{ :alt => 'http://holidayplannerapp.com' }
			%a{ :href => 'http://holidayplannerapp.com' }
				= img( 'projects/holidayplanner.png' )
		%p
			Open source web tool allowing easy... holiday planning.  
			%ul
				%li Facebook integration
				%li Available in Poland, Italy, England, Wales, Northen Ireland

.spacer.inner

